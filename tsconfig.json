{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",      
    "src/**/*.tsx",          
    "src/types/**/*.d.ts",     
    "types.d.ts",               
    "express.d.ts",
    "src/**/*.d.ts",             
  ],
  "exclude": ["node_modules"]
}
